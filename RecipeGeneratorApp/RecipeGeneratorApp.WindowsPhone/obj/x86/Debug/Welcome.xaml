<Page
    x:Class="RecipeGeneratorApp.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeGeneratorApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" x:Name="upper">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/DarkGray.png" Stretch="Fill"/>
            </Grid.Background>
            <Image HorizontalAlignment="Left" Width="100" Source="images/RGApp-logo.png" Margin="22,6,0,117"/>
            <TextBlock HorizontalAlignment="Left" Margin="226,3,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" FontSize="25" Height="30" Width="63"/>
            <TextBox x:Name="txtLoginEmail" HorizontalAlignment="Left" Margin="172,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="150" FontSize="14"/>
            <PasswordBox x:Name="pwbxLoginPassword" HorizontalAlignment="Left" Margin="172,113,0,0" VerticalAlignment="Top" Width="150" Height="24"/>
            <Button x:ConnectionId='2' x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="172,151,0,0" VerticalAlignment="Top" Height="22" Width="130" FontSize="20"                        />
            <TextBlock HorizontalAlignment="Left" Margin="173,31,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" FontSize="14" Height="17" Width="33"/>
            <TextBlock HorizontalAlignment="Left" Margin="172,96,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="14" Height="17" Width="50"/>
        </Grid>

        <Grid Grid.Row="1" x:Name="contentRegion">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/MediumGray.png" Stretch="Fill"/>
            </Grid.Background>

            <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="35,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontSize="14" Height="14"/>
            <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Margin="234,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontSize="14" Height="14"/>
            <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="34,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontSize="14" Height="14"/>
            <TextBlock HorizontalAlignment="Left" Margin="36,64,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" FontSize="14"/>
            <TextBlock HorizontalAlignment="Left" Margin="236,64,0,0" TextWrapping="Wrap" Text="Surname" VerticalAlignment="Top" FontSize="14"/>
            <TextBlock HorizontalAlignment="Left" Margin="35,154,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" FontSize="14"/>
            <TextBlock HorizontalAlignment="Left" Margin="34,227,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="14"/>
            <TextBlock HorizontalAlignment="Left" Margin="235,230,0,0" TextWrapping="Wrap" Text="Confirm" VerticalAlignment="Top" FontSize="14"/>
            <Button x:ConnectionId='1' x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="135,319,0,0" VerticalAlignment="Top" FontSize="20" Width="140" Height="30"                            />
            <TextBlock HorizontalAlignment="Left" Margin="152,3,0,0" TextWrapping="Wrap" Text="Register" VerticalAlignment="Top" FontSize="25"/>
            <PasswordBox x:Name="pwbxPassword" HorizontalAlignment="Left" Margin="36,250,0,0" VerticalAlignment="Top" Width="140" FontSize="14" Height="14"/>
            <PasswordBox x:Name="pwbxConfirm" HorizontalAlignment="Left" Margin="236,249,0,0" VerticalAlignment="Top" Width="140" FontSize="14" Height="14"/>

        </Grid>
    </Grid>
</Page>

